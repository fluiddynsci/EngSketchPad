# make two boxes with divider
BOX       0  0  0  2  1  1
BOX       1 -1 -1  0  3  3
SUBTRACT
EXTRACT   0

BOX       1  0  0  0  1  1
UNION

# break so that each Face is its own Body; generate coarse quads
STORE     body
PATBEG    iface  @nface
   RESTORE   body
   EXTRACT   iface
      ATTRIBUTE _makeQuads 1
   SELECT   EDGE
      ATTRIBUTE .nPos      1
PATEND

# make grid on Body 22 finer
SELECT    BODY  22
SELECT    EDGE
   ATTRIBUTE .nPos 2

END
