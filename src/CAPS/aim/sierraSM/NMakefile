#
!IFNDEF ESP_ROOT
!ERROR ESP_ROOT must be set -- Please fix the environment...
!ENDIF
#
IDIR  = $(ESP_ROOT)\include
!include $(IDIR)\$(ESP_ARCH).$(MSVC)
LDIR  = $(ESP_ROOT)\lib
!IFDEF ESP_BLOC
ODIR  = $(ESP_BLOC)\obj
TDIR  = $(ESP_BLOC)\test
!ELSE
ODIR  = .
TDIR  = $(ESP_ROOT)\bin
!ENDIF

OBJS =	$(ODIR)\sierraAIM.obj

$(LDIR)\sierraAIM.dll:	sierraAIM.def $(OBJS) $(LDIR)\utils.lib
	-del $(LDIR)\sierraAIM.dll $(LDIR)\sierraAIM.lib $(LDIR)\sierraAIM.exp
	 link /out:$(LDIR)\sierraAIM.dll /dll /def:sierraAIM.def \
		$(OBJS) /LIBPATH:$(LDIR) utils.lib aimUtil.lib \
		ocsm.lib egads.lib udunits2.lib
	$(MCOMP) /manifest $(LDIR)\sierraAIM.dll.manifest \
		/outputresource:$(LDIR)\sierraAIM.dll;2

$(ODIR)\sierraAIM.obj:	sierraAIM.c sierraUtils.h $(IDIR)\capsTypes.h \
			..\utils\meshUtils.h
	cl /c $(COPTS) $(DEFINE) /I$(IDIR) /I..\meshWriter\exodusWriter /I..\utils sierraAIM.c \
		/Fo$(ODIR)\sierraAIM.obj

clean:
	-del $(OBJS)

cleanall:	clean
	-del $(LDIR)\sierraAIM.dll $(LDIR)\sierraAIM.lib $(LDIR)\sierraAIM.exp
